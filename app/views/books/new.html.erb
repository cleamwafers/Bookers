    <!DOCTYPE html>
<html>
  <table>
   <head>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </head>
　 <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
      <%=@book.title %>
      </td>
      <td>
      <%=@book.body %>
      </td>
    </tr>
   </tbody>
  </table>
    <h2>New book</h2>
    <% if @book.errors.any? %>
    <div id="error_explanation" >
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
    <% end %>

    <!-- form_with部分 -->
    <%= form_with model: @book, url: '/books', method: :post do  |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit 'create Book' %>
    <% end %>

</html>